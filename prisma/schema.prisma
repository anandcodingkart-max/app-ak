// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

enum Status {
  PENDING
  COMPLETED
  ACTIVE
  INACTIVE
  DELETED
  EXPIRED
}

model Session {
  id                  String    @id
  shop                String
  state               String
  isOnline            Boolean   @default(false)
  scope               String?
  expires             DateTime?
  accessToken         String
  userId              BigInt?
  firstName           String?
  lastName            String?
  email               String?
  accountOwner        Boolean   @default(false)
  locale              String?
  collaborator        Boolean?  @default(false)
  emailVerified       Boolean?  @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?
}

model InventoryNotificationRequest {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  productId String
  variantId String
  status    Status   @default(PENDING)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([variantId])
  @@index([email])
}

model GiftProducts {
  id             Int      @id @default(autoincrement())
  recipientName  String
  recipientEmail String
  giftMessage    String
  variantId      String
  couponCode     String
  expireDate     DateTime
  status         Status   @default(PENDING)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model KitCategories {
  id           Int      @id @default(autoincrement())
  categoryName String
  status       Status   @default(ACTIVE)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  kitTags KitTags[]
}

model KitTags {
  id         Int      @id @default(autoincrement())
  tagName    String
  categoryId Int
  status     Status   @default(ACTIVE)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  kitCategory KitCategories @relation(fields: [categoryId], references: [id])
}

model KitOrders {
  id         Int      @id @default(autoincrement())
  customerId String
  productId  String
  variantId  String
  kitChoice  String
  tags       Json
  status     Status   @default(ACTIVE)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([customerId, productId, variantId])
}

model kitOrderHistory {
  id         Int      @id @default(autoincrement())
  customerId String
  productId  String
  variantId  String
  kitChoice  String
  categoryId Int?
  tagId      Int?
  status     Status   @default(ACTIVE)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
